@model SiteAgencia.Models.Contato

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main class="container border border-1">
    <div class="row d-flex justify-content-center text-center mt-5">
         <h4>Contato</h4>
        <hr class="w-50" />
       <div class="row col-md-12 col-lg-12 d-flex justify-content-center">
       
            <form asp-action="Create" class="form-control w-50 mb-5">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Mesagem" class="control-label"></label>
                    <textarea asp-for="Mesagem" class="form-control"></textarea>
                    <span asp-validation-for="Mesagem" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input onclick="alerta()" type="submit" value="Enviar" class="btn btn-danger m-5" />
                </div>
            </form>
        </div>
    </div>
    <script>
        function alerta(){
            alert("Enviando mensagem ao painel de controle do site");
        }
    </script>
</main>


