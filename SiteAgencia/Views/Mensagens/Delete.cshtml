@model SiteAgencia.Models.Contato

@{
    ViewData["Title"] = "Delete contato";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Mesagem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mesagem)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index"><span class="material-icons">keyboard_return</span></a>
    </form>
</div>
