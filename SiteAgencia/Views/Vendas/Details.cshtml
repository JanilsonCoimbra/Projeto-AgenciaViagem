@model SiteAgencia.Models.Compras

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Compras</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.cliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cliente.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.destino)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.destino.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id"><span class="material-icons">edit_note</span></a> |
    <a asp-action="Index"><span class="material-icons">keyboard_return</span></a>
</div>
